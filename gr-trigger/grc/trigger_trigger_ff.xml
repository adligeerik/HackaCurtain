<?xml version="1.0"?>
<block>
  <name>trigger_ff</name>
  <key>trigger_trigger_ff</key>
  <category>trigger</category>
  <import>import trigger</import>
  <var_make>self.$(id) = $(id) = $triggered</var_make>
  <make>trigger.trigger_ff($key ,$threshold, $length, $triggered)
  self._$(id)_ff = trigger.trigger_ff($key ,$threshold, $length, $triggered)
	triggered=self.$id,
	callback=self.set_$(id),
)
</make>
  <callback>self.get_val($id)</callback>
  
  
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->




  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <type>float</type>
  </param>

  <param>
    <name>Length</name>
    <key>length</key>
    <type>float</type>
  </param>

    <param>
    <name>Triggered</name>
    <key>triggered</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
</block>
